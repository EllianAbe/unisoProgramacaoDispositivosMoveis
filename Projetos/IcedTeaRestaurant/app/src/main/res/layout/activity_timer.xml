<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:gravity="center|top|center_vertical"
    android:orientation="vertical"
    tools:context=".TimerActivity">

    <TextView
        android:id="@+id/txtTempo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView" />

    <Button
        android:id="@+id/iniciar"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:onClick="onClickIniciar"
        android:text="@string/iniciar" />

    <Button
        android:id="@+id/pausar"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:onClick="onClickParar"
        android:text="@string/pausar" />

    <Button
        android:id="@+id/encerrar"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:onClick="onClickEncerrar"
        android:text="@string/encerrar" />

    <Button
        android:id="@+id/voltar"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:text="@string/voltar"
        android:onClick="onClickVoltar" />
</LinearLayout>